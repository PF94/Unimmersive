<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unimmersive.Shell.UserTileWindow"
        x:Name="Window" x:Class="Unimmersive.Shell.UserTileWindow.TileMenu"
        mc:Ignorable="d"
        Title="UserTileWindow" Height="240" Width="320" WindowStyle="ToolWindow" Initialized="OnInitialized">
    <Grid>
        <Rectangle Height="24" VerticalAlignment="Top" Fill="#FF5D5D5D"/>
        <Image x:Name="UserTileImage" Margin="0,32,10,0" HorizontalAlignment="Right" Width="80" Height="80" VerticalAlignment="Top"/>
        <Label x:Name="Title" Content="John Freeman" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="320" Foreground="White" FontSize="11"/>
    </Grid>
</Window>
